function sleep()
 for i=1, kernel.y do
  graphics.drawLine(i, colors.black)
  os.sleep(0.01)
 end
end

function closeIn()
 for i=1, kernel.x do
  paintutils.drawLine(i, 1, i, kernel.y, colors.black) 
  os.sleep(0.01)
 end
end

function wake()
 for i=1, kernel.y do
  graphics.drawLine(i, colors.lightBlue)
  os.sleep(0.01)
 end
end
